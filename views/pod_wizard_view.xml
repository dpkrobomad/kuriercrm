<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pod_wizard_form" model="ir.ui.view">
        <field name="name">pod.wizard.form</field>
        <field name="model">pod.wizard</field>
        <field name="arch" type="xml">
            <form string="Print POD">
                <group name="wizard_main">
                    <group name="wizard_main_col1">
                        <field name="consignee_address"/>
                        <field name="cargo_details"/>
                        <field name="no_cartons"/>
                        <field name="awb_bl"/>
                        <field name="truck_number"/>
                    </group>
                    <group name="wizard_main_col2">
                        <field name="delivery_date"/>
                        <field name="po_number"/>
                        <field name="remarks"/>
                        <field name="receiver_name"/>
                        <field name="date_time"/>
                    </group>
                </group>
                <footer>
                    <button string="Print" type="object" name="print_pod" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

