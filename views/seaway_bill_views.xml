<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_seaway_bill_form" model="ir.ui.view">
        <field name="name">seaway.bill.form</field>
        <field name="model">seaway.bill</field>
        <field name="arch" type="xml">
            <form string="Bill of Lading">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_print_seaway_bill_pdf" type="object" class="oe_stat_button" icon="fa-file-pdf-o"
                                string="Print Bill of Lading"/>
                        <button name="action_edit_wizard" type="object" class="oe_stat_button" icon="fa-edit"
                                string="Edit"/>
                    </div>
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="bl_number"/>
                            <field name="bill_type"/>
                            <field name="shipper" widget="text"/>
                            <field name="consignee" widget="text"/>
                            <field name="notify_party" widget="text"/>
                            <field name="pre_carriage_by"/>
                            <field name="place_of_receipt"/>
                            <field name="freight_to_be_paid_at_id" options="{'no_create': True}"/>
                            <field name="no_of_orig_bl"/>
                            <field name="vessel_voyage_no"/>
                            <field name="pol"/>
                            <field name="pod"/>
                        </group>
                        <group>
                            <field name="final_place_of"/>
                            <field name="fcl_lcl_option"/>
                            <field name="shipped_on_board" widget="datetime"/>
                            <field name="delivery_agent" widget="text"/>
                            <field name="place_of_issue_country_id"/>
                            <field name="issued_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Line Items" name="line_items">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="marks_and_nos_container" widget="text"/>
                                    <field name="seals" widget="text"/>
                                    <field name="no_and_kind_of_package" widget="text"/>
                                    <field name="description"/>
                                    <field name="gross_weight"/>
                                    <field name="net_weight"/>
                                    <field name="measurement"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_seaway_bill_tree" model="ir.ui.view">
        <field name="name">seaway.bill.tree</field>
        <field name="model">seaway.bill</field>
        <field name="arch" type="xml">
            <tree string="Bills of Lading" editable="bottom">
                <field name="bl_number"/>
                <field name="sale_order_id"/>
                <field name="bill_type"/>
                <field name="pol"/>
                <field name="pod"/>
                <field name="shipped_on_board"/>
            </tree>
        </field>
    </record>

    <record id="action_seaway_bill" model="ir.actions.act_window">
        <field name="name">Bills of Lading</field>
        <field name="res_model">seaway.bill</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Bills of Lading yet</p>
        </field>
    </record>

    <menuitem id="menu_seaway_bill" name="Bills of Lading" parent="sale.sale_order_menu" action="action_seaway_bill" sequence="30"/>
</odoo>
