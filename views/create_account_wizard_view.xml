<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_account_wizard_form" model="ir.ui.view">
        <field name="name">create.account.wizard.form</field>
        <field name="model">create.account.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="partner_id" invisible="1"/>
                        <field name="company_name"/>
                        <field name="contact_person"/>
                        <field name="email"/>
                    </group>
                    <group>
                        <field name="phone"/>
                        <field name="partner_ref"/>
                        <field name="password" password="True"/>
                        <field name="confirm_password" password="True"/>
                    </group>
                </group>
                <footer>
                    <button name="action_create_account" 
                            string="Create Account" 
                            type="object" 
                            class="btn-primary"/> 
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/> 
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_account_wizard" model="ir.actions.act_window">
        <field name="name">Create Account</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.account.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
    </record> 
</odoo> 
