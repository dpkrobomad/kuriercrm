<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Kurier category for KVADMIN role -->
        <record model="ir.module.category" id="module_category_kurier">
            <field name="name">Kurier</field>
            <field name="sequence">95</field>
        </record>

        <!-- KVADMIN: Full access to Sales, Accounting, Invoicing, Tracking, Site Settings.
             No access to Apps or Debug/Technical Features. -->
        <record id="group_kvadmin" model="res.groups">
            <field name="name">KVADMIN</field>
            <field name="category_id" ref="module_category_kurier"/>
            <field name="comment">Full access to Sales, Accounting, Invoicing, Tracking and Site Settings. No Apps or Debug.</field>
            <field name="implied_ids" eval="[
                Command.link(ref('base.group_user')),
                Command.link(ref('sales_team.group_sale_manager')),
                Command.link(ref('account.group_account_manager'))
            ]"/>
        </record>
    </data>
</odoo>
